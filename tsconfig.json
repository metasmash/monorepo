{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": [],
    "baseUrl": "./",
    "paths": {
      "@my-lib/*": ["packages/my-lib/src/*"],
      "@my-app/*": ["apps/my-app/*"]
    },
    "noEmit": true
  }
}
